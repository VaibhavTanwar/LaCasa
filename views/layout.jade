      function foo() {
        let elem = document.getElementsByClassName('card_inner')[0].getElementsByTagName('input');
        let userObj = {
          username : elem[0].value,
          address : elem[1].value,
          phone : elem[2].value,
          email : elem[4].value,
          password : elem[5].value
        };
        if(elem[5] !== elem[6]) {
          alert('Signup Successfull');
        }
        var xhttp;
        xhttp=new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
               if(this.responseText == 'SUCCESS') {
                    window.location.href = '/user';
               }
            }
        };
        xhttp.open("POST" , "/confirm?obj=" + JSON.stringify(userObj) , true);
        xhttp.send();
      }

