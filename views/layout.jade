        };
        let xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
          if(this.responseText == 'SUCCESS')
             alert('Login Successful');//- window.location.href = '/user'; // Link here
        }
        xhttp.open("POST" , "/login?obj=" + JSON.stringify(obj) , true);
        xhttp.send();
      }
